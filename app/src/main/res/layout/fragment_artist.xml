<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">





            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The Glitch Mob is an American three-piece electronic music group from Los Angeles, California. It consists of edIT (Edward Ma), Boreta (Justin Boreta) and Ooah (Josh Mayer).[1] Chris Martins of LA Weekly noted that they &quot;have undoubtedly found the largest audience of any L.A. beat scene artist yet.&quot;"
                android:id="@+id/descriptionView"
                android:layout_marginRight="20dp"
                android:gravity="left"

                android:layout_below="@+id/locationTxt"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TwitterUrl"
                android:id="@+id/twUrlTxt"

                android:layout_below="@+id/nickTxt"
                android:layout_centerHorizontal="true" />





    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView"
        android:src="@drawable/glitchmob"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:id="@+id/nameTxt"
        android:layout_below="@+id/websiteTxt"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nickname"
        android:id="@+id/nickTxt"
        android:layout_below="@+id/nameTxt"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:id="@+id/locationTxt"
        android:layout_below="@+id/twUrlTxt"
        android:layout_alignStart="@+id/twUrlTxt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Website"
        android:id="@+id/websiteTxt"

        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>