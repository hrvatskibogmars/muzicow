<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/IDFd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView9"
            android:layout_alignStart="@+id/textView9"
            android:layout_below="@+id/textView9"
            android:layout_marginTop="55dp"
            android:editable="false"
            android:ems="10"
            android:focusable="false"
            android:gravity="center|center_horizontal"
            android:inputType="textPersonName"
            android:text="ID" />

        <EditText
            android:id="@+id/Location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView9"
            android:layout_alignStart="@+id/IDFd"
            android:layout_below="@+id/IDFd"
            android:ems="10"
            android:gravity="center|center_horizontal"
            android:hint="City"
            android:inputType="textEmailAddress"
            android:text="Location" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Change your profile information"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/NameFd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView9"
            android:layout_alignStart="@+id/Location"
            android:layout_below="@+id/Location"
            android:gravity="center|center_horizontal"
            android:hint="Name"
            android:text="Name" />

        <EditText
            android:id="@+id/NicknameFd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView9"
            android:layout_alignStart="@+id/NameFd"
            android:layout_below="@+id/NameFd"
            android:gravity="center|center_horizontal"
            android:hint="Nickname"
            android:text="Nickname" />

        <EditText
            android:id="@+id/WebsiteFd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView9"
            android:layout_alignStart="@+id/NicknameFd"
            android:layout_below="@+id/NicknameFd"
            android:gravity="center|center_horizontal"
            android:hint="Website"
            android:text="WebSite" />

        <EditText
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView9"
            android:layout_alignStart="@+id/WebsiteFd"
            android:layout_below="@+id/WebsiteFd"
            android:gravity="center|center_horizontal"
            android:hint="Description" />

        <EditText
            android:id="@+id/twitterurl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView9"
            android:layout_alignStart="@+id/description"
            android:layout_below="@+id/description"
            android:gravity="center|center_horizontal"
            android:hint="Twitter profile link" />

        <EditText
            android:id="@+id/profileurl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView9"
            android:layout_alignStart="@+id/twitterurl"
            android:layout_below="@+id/twitterurl"
            android:gravity="center|center_horizontal"
            android:hint="Profile picture link" />

        <Button
            android:id="@+id/updateProfileButton"
            android:layout_width="100pt"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="false"
            android:layout_below="@+id/profileurl"
            android:layout_centerHorizontal="true"
            android:background="@drawable/tw__login_btn_default"
            android:gravity="center|center_horizontal"
            android:onClick="updateProfile"
            android:text="Update Profile"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
        <!--
           <ScrollView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/scrollView"
               android:layout_below="@+id/textView9"
               android:layout_centerHorizontal="true" /> -->
    </RelativeLayout>
</ScrollView>