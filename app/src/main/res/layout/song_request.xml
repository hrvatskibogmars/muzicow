<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/include"
        layout="@layout/include_list_viewpager"
        android:layout_width="match_parent"
        android:layout_height="124dp" />

    <EditText
        android:id="@+id/songTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:ems="10"
        android:hint="eg. Born to be wild"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/artistTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="by Steppenwolf" />

    <EditText
        android:id="@+id/descriptionTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:ems="10"
        android:hint="Additional notes to Artist"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/ytbTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:ems="10"
        android:hint="Youtube link"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/sendBtn"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:background="@drawable/tw__login_btn"
        android:text="Send request"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

</LinearLayout>